{
  "name": "react-governors",
  "version": "0.1.4",
  "description": "Separate state from Components.",
  "author": "James K Nelson <james@jamesknelson.com>",
  "license": "MIT",
  "main": "commonjs/index.js",
  "module": "src/index.mjs",
  "scripts": {
    "clean": "rimraf lib",
    "build": "cross-env BABEL_ENV=commonjs babel -x .mjs src --out-dir commonjs",
    "build:watch": "cross-env BABEL_ENV=commonjs babel -x .mjs --watch --source-maps=inline -d commonjs/ src/",
    "test": "mocha -r @std/esm test/*.test.mjs",
    "test:watch": "mocha --watch -r @std/esm test/*.test.mjs",
    "prepublish": "npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "governors",
    "controller",
    "state"
  ],
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "mocha": "^4.0.1",
    "cross-env": "^3.1.4",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "hoist-non-react-statics": "^1.2.0"
  }
}
