{
  "name": "react-govern",
  "version": "0.2.8",
  "description": "Separate state from Components.",
  "author": "James K Nelson <james@jamesknelson.com>",
  "license": "MIT",
  "main": "./dist/commonjs/index.js",
  "module": "dist/es/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:watch": "npm run build:es -- --watch",
    "build:es": "cross-env BABEL_ENV=es babel src --source-maps --out-dir dist/es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --source-maps --out-dir dist/commonjs",
    "build": "npm run build:es && npm run build:commonjs",
    "prepublish": "npm run clean && npm run build && npm run test",
    "test": "cross-env NODE_ENV=test jest"
  },
  "keywords": [
    "react",
    "governors",
    "controller",
    "state"
  ],
  "peerDependencies": {
    "govern": "^0.2.0",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "cross-env": "^3.1.4",
    "jest": "^21.2.1",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "hoist-non-react-statics": "^1.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "mjs",
      "js",
      "json",
      "jsx"
    ],
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    },
    "testRegex": "/__tests__/.*\\.m?js$"
  }
}
