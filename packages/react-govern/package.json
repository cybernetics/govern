{
  "name": "react-govern",
  "version": "0.2.5",
  "description": "Separate state from Components.",
  "author": "James K Nelson <james@jamesknelson.com>",
  "license": "MIT",
  "main": "commonjs/index.js",
  "module": "src/index.mjs",
  "scripts": {
    "clean": "rimraf lib",
    "build": "cross-env BABEL_ENV=commonjs babel src --out-dir commonjs",
    "build:watch": "cross-env BABEL_ENV=commonjs babel --watch --source-maps=inline -d commonjs/ src/",
    "test": "cross-env NODE_ENV=test jest",
    "prepare": "npm run test && npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "governors",
    "controller",
    "state"
  ],
  "peerDependencies": {
    "govern": "^0.2.0",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "cross-env": "^3.1.4",
    "jest": "^21.2.1",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "hoist-non-react-statics": "^1.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "mjs",
      "js",
      "json",
      "jsx"
    ],
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    },
    "testRegex": "/__tests__/.*\\.m?js$"
  }
}
